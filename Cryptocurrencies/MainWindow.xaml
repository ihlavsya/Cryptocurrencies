<Window x:Class="Cryptocurrencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptocurrencies"
        xmlns:components="clr-namespace:Cryptocurrencies.Components"
        mc:Ignorable="d"
        FontSize="14"
        Title="Cryptocurrencies" Height="450" Width="935">
    <Window.Resources>
        <Style x:Key="MainMargin">
            <Setter Property="Control.Margin" Value="30" />
        </Style>
        <Style x:Key="BlackAndWhite">
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.FontSize" Value="20" />
        </Style>
    </Window.Resources>
    <Border Style="{StaticResource MainMargin}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Cryptocurrencies" Style="{StaticResource BlackAndWhite}"/>

            <components:GridCryptocurrencyInfo Grid.Row="1"/>

        </Grid>
    </Border>
</Window>
